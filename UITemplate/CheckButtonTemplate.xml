<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
	<Script file="CheckButtonTemplate.lua"/>


    <!-- 박스 + 텍스트의 기본 스타일 체크 버튼 -->
    <Button name="HDH_AT_CheckButtonTemplate" mixin="HDH_AT_CheckButtonTemplateMixin" virtual="true">
		<Size x="110" y="20" />
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="DeactiveCheckBoxTop" hidden="false">
					<Size x="16" y="2" />
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="2" y="-2"/>
					</Anchors>
				</Texture>

				<Texture parentKey="DeactiveCheckBoxLeft" hidden="false">
					<Size x="2" y="12" />
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="2" y="-4"/>
					</Anchors>
				</Texture>

				<Texture parentKey="DeactiveCheckBoxRight" hidden="false">
					<Size x="2" y="12" />
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="16" y="-4"/>
					</Anchors>
				</Texture>

				<Texture parentKey="DeactiveCheckBoxBottom" hidden="false">
					<Size x="16" y="2" />
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.DeactiveCheckBoxLeft" relativePoint="BOTTOMLEFT" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>

		<Frames>
			<Frame parentKey="Active">
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="BORDER">
						<!-- <Texture parentKey="CheckMarkerBg" inherits="HDH_AT_Texture_Yellow">
							<Size x="16" y="16" />
							<Anchors>
								<Anchor point="TOPLEFT" x="2" y="-2"/>
							</Anchors>
						</Texture> -->
						<Texture parentKey="ActiveCheckBoxTop" inherits="HDH_AT_Texture_Yellow" hidden="false">
							<Size x="16" y="2" />
							<Anchors>
								<Anchor point="TOPLEFT" x="2" y="-2"/>
							</Anchors>
						</Texture>

						<Texture parentKey="ActiveCheckBoxLeft" inherits="HDH_AT_Texture_Yellow" hidden="false">
							<Size x="2" y="12" />
							<Anchors>
								<Anchor point="TOPLEFT" x="2" y="-4"/>
							</Anchors>
						</Texture>

						<Texture parentKey="ActiveCheckBoxRight" inherits="HDH_AT_Texture_Yellow" hidden="false">
							<Size x="2" y="12" />
							<Anchors>
								<Anchor point="TOPLEFT" x="16" y="-4"/>
							</Anchors>
						</Texture>

						<Texture parentKey="ActiveCheckBoxBottom" inherits="HDH_AT_Texture_Yellow" hidden="false">
							<Size x="16" y="2" />
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.ActiveCheckBoxLeft" relativePoint="BOTTOMLEFT" x="0" y="0"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture parentKey="CheckMarker" file="Interface/AddOns/HDH_AuraTracker/Texture/check" >
							<Size x="10" y="10" />
							<Color r="1" g="0.8" b="0"/>
							<Anchors>
								<Anchor point="LEFT" relativePoint="LEFT" x="5" y="0"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</Frame>

			<Frame parentKey="Base">
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="Text" inherits="Font_White_S" text="" justifyH="LEFT"  justifyV="MIDDLE">
							<Size  y="20" />
							<Anchors>
								<Anchor point="LEFT" relativePoint="LEFT" x="24" y="0"/>
								<Anchor point="RIGHT" relativePoint="RIGHT" x="-2" y="0"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
			</Frame>
		</Frames>
		<HighlightTexture alphaMode="ADD" inherits="HDH_AT_Texture_White_A">
		</HighlightTexture>

		<Scripts>
			<OnClick function="HDH_AT_CheckButton_OnClick" />
			<OnEnable>self:SetFontObject("Font_White_S")</OnEnable>
			<OnDisable>self:SetFontObject("Font_Gray_S")</OnDisable>
			<OnEnter function="HDH_AT_CheckButton_OnEnter" />
			<OnLeave function="HDH_AT_CheckButton_OnLeave" />
		</Scripts>
	</Button>

    <!-- 텍스트 영역까지 색상 변환되는 체크 버튼 -->
    <Button name="HDH_AT_CheckButton2Template" mixin="HDH_AT_CheckButtonTemplateMixin" virtual="true">
		<Size x="110" y="20" />
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="DeactiveBorderTop" hidden="false">
					<Size y="2" />
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
						<Anchor point="TOPRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>

				<Texture parentKey="DeactiveBorderLeft" hidden="false">
					<Size x="2" />
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-2"/>
						<Anchor point="BOTTOMLEFT" x="0" y="2"/>
					</Anchors>
				</Texture>

				<Texture parentKey="DeactiveBorderBottom" hidden="false">
					<Size y="2" />
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>

				<Texture parentKey="DeactiveBorderRight" hidden="false">
					<Size x="2" />
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="TOPRIGHT" x="0" y="-2"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="2"/>
					</Anchors>
				</Texture>

				<Texture parentKey="Deactive" hidden="false">
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
