				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="Active" hidden="true">
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
				<Layers>	
					<Layer level="BORDER">
						<Texture parentKey="ActiveBorderTop" inherits="HDH_AT_Texture_Yellow">
							<Size x="16" y="2" />
							<Anchors>
								<Anchor point="TOPLEFT" x="2" y="-2"/>
							</Anchors>
						</Texture>

						<Texture parentKey="ActiveBorderLeft" inherits="HDH_AT_Texture_Yellow">
							<Size x="2" y="12" />
							<Anchors>
								<Anchor point="TOPLEFT" x="2" y="-4"/>
							</Anchors>
						</Texture>

						<Texture parentKey="ActiveBorderBottom" inherits="HDH_AT_Texture_Yellow">
							<Size x="2" y="12" />
							<Anchors>
								<Anchor point="TOPLEFT" x="16" y="-4"/>
							</Anchors>
						</Texture>

						<Texture parentKey="ActiveBorderRight" inherits="HDH_AT_Texture_Yellow">
							<Size x="16" y="2" />
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.ActiveBorderLeft" relativePoint="BOTTOMLEFT" x="0" y="0"/>
							</Anchors>
						</Texture>
						
						<Texture name="$parentBg" parentKey="Active1" inherits="HDH_AT_Texture_Yellow">
							<Anchors>
								<Anchor point="TOPLEFT" x="18" y="-2"/>
								<Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
							</Anchors>
						</Texture>
					</Layer>

					<Layer level="OVERLAY">
						<Texture parentKey="CheckMarker" file="Interface/AddOns/HDH_AuraTracker/Texture/check">
							<Size x="8" y="10" />
							<Color r="1" g="0.8" b="0"/>
							<Anchors>
								<Anchor point="LEFT" relativePoint="LEFT" x="6" y="0"/>
							</Anchors>
						</Texture>
					</Layer>	
				</Layers>
			</Frame>

			<Frame parentKey="Base">
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="Text" inherits="Font_White_S" text="" justifyH="LEFT"  justifyV="MIDDLE">
							<Size  y="20" />
							<Anchors>
								<Anchor point="LEFT" relativePoint="LEFT" x="24" y="0"/>
								<Anchor point="RIGHT" relativePoint="RIGHT" x="-2" y="0"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
			</Frame>
		</Frames>

		<HighlightTexture alphaMode="ADD" inherits="HDH_AT_Texture_White_A">
		</HighlightTexture>

		<Scripts>
			<OnClick function="HDH_AT_CheckButton_OnClick" />
			<OnEnable>self:SetFontObject("Font_White_S")</OnEnable>
			<OnDisable>self:SetFontObject("Font_Gray_S")</OnDisable>
			<OnEnter function="HDH_AT_CheckButton_OnEnter" />
			<OnLeave function="HDH_AT_CheckButton_OnLeave" />
		</Scripts>
	</Button>

    <!-- 박스와 텍스트 없고 '체크 이미지'만 있는 체크 버튼 -->
	<Button name="HDH_AT_CheckButton3Template" mixin="HDH_AT_CheckButtonTemplateMixin" virtual="true">
		<Size x="110" y="20" />
		<Layers>
			<Layer level="BORDER">
				<Texture parentKey="CheckMarkerBg">
					<Size x="12" y="12" />
					<Color r="0.3" g="0.3" b="0.3" a="0.8"/>
					<Anchors>
						<Anchor point="LEFT" x="2" y="0"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="OVERLAY">
				<Texture parentKey="CheckMarkerBg" inherits="HDH_AT_Texture_Yellow">
					<Size x="10" y="10" />
					<Color r="0.0" g="0.0" b="0.0" a="0.8"/>
					<Anchors>
						<Anchor point="LEFT" x="3" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		
		<Frames>
			<Frame name="$parentActive" parentKey="Active">
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>

				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="CheckMarker" file="Interface/AddOns/HDH_AuraTracker/Texture/check" >
							<Size x="8" y="8" />
							<Color r="0" g="0" b="0" a="0.3"/>
							<Anchors>
								<Anchor point="LEFT" relativePoint="LEFT" x="5" y="-1"/>
							</Anchors>
						</Texture>

						<Texture parentKey="CheckMarker" file="Interface/AddOns/HDH_AuraTracker/Texture/check" >
							<Size x="8" y="8" />
							<Color r="0.8" g="0.8" b="0" a="0.7"/>
							<Anchors>
								<Anchor point="LEFT" relativePoint="LEFT" x="4" y="0"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				
				<!-- <Scripts>
					<OnShow>self:GetParent():SetFontObject("Font_Gray_S")</OnShow>
					<OnHide>self:GetParent():SetFontObject("Font_Gray_S")</OnHide>
				</Scripts> -->
			</Frame>

			<Frame name="$parentBase" parentKey="Base">
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="Text" inherits="Font_White_XS" text="" justifyH="LEFT"  justifyV="MIDDLE">
							<Size  y="20" />
							<Anchors>
								<Anchor point="LEFT" relativePoint="LEFT" x="18" y="0"/>
								<Anchor point="RIGHT" relativePoint="RIGHT" x="-2" y="0"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>

		<!-- <HighlightTexture alphaMode="ADD" inherits="HDH_AT_Texture_White_A">
		</HighlightTexture> -->

		<Scripts>
			<OnClick function="HDH_AT_CheckButton_OnClick" />
			<OnEnable>self:SetFontObject("Font_White_S")</OnEnable>
			<OnDisable>self:SetFontObject("Font_Gray_S")</OnDisable>
			<OnEnter function="HDH_AT_CheckButton_OnEnter" />
			<OnLeave function="HDH_AT_CheckButton_OnLeave" />
		</Scripts>

	</Button>

	<Button name="HDH_AT_CheckButtonImageTemplate" inherits="HDH_AT_CheckButtonTemplate" virtual="true">
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentIcon" parentKey="Icon" file="Interface\ICONS\INV_Misc_QuestionMark">
					<Size x="20" y="20"/>
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT" x="5" y="0"/>
					</Anchors>
					<TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92" /> 
				</Texture>

				<Texture parentKey="Top">
					<Size x="24" y="1"/>
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="BOTTOM" relativePoint="TOP" relativeKey="$parent.Icon" x="0" y="1"/>
					</Anchors>
				</Texture>

				<Texture parentKey="Bottom">
					<Size x="24" y="1"/>
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.Icon" x="0" y="-1"/>
					</Anchors>
				</Texture>

				<Texture parentKey="Left">
					<Size x="1" y="22"/>
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="RIGHT" relativePoint="LEFT" relativeKey="$parent.Icon" x="-1" y="0"/>
					</Anchors>
				</Texture>

				<Texture parentKey="Right">
					<Size x="1" y="22"/>
					<Color r="0.3" g="0.3" b="0.3" a="0.5"/>
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.Icon" x="1" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<HitRectInsets left="0" right="-30" top="0" bottom="0"/>
	</Button>

	<Button name="HDH_AT_CheckButtonForExportTemplate" inherits="HDH_AT_CheckButton2Template" virtual="true">
		<Frames>
			<Frame parentKey="Talent">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="$parentIcon1" parentKey="Icon1" file="Interface\ICONS\INV_Misc_QuestionMark">
							<Size x="14" y="14" />
							<Anchors>
								<Anchor point="RIGHT" relativePoint="RIGHT" x="-3" y="0"/>
							</Anchors>
							<TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92" /> 
						</Texture>

						<Texture name="$parentIcon2" parentKey="Icon2" file="Interface\ICONS\INV_Misc_QuestionMark">
							<Size x="14" y="14" />
							<Anchors>
								<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentIcon1" x="-1" y="0"/>
							</Anchors>
							<TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92" /> 
						</Texture>

						<Texture name="$parentIcon3" parentKey="Icon3" file="Interface\ICONS\INV_Misc_QuestionMark">
							<Size x="14" y="14" />
							<Anchors>
								<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentIcon2" x="-1" y="0"/>
							</Anchors>
							<TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92" /> 
						</Texture>

						<Texture name="$parentIcon4" parentKey="Icon4" file="Interface\ICONS\INV_Misc_QuestionMark">
							<Size x="14" y="14" />
							<Anchors>
								<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentIcon3" x="-1" y="0"/>
							</Anchors>
							<TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92" /> 
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
	</Button>

	<CheckButton name="HDH_AT_TalentCheckButtonTemplate" inherits="HDH_AT_ConfigFrameTemplate" mixin="HDH_AT_TalentCheckButtonMixin"  virtual="true">
		<Size x="70" y="70" />
		<Layers>

			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture name="$parentIcon" parentKey="Icon" hidden="false">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="2" y="-2"/>
						<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="-2" y="2" />
					</Anchors>
					<TexCoords left="0.08" right="0.92" top="0.22" bottom="0.78" /> 
				</Texture>
			</Layer>

			<Layer level="ARTWORK" textureSubLevel="5">
				<Texture name="$parentActive" parentKey="Active">
					<Size x="1" y="12" />
					<Color r="0" g="0" b="0" a="0.5"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentIcon" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parentIcon" x="0" y="0" />
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="ARTWORK" textureSubLevel="3">
				<FontString name="$parentName" parentKey="Name" inherits="Font_Yellow_S" text="텍스트 입력" justifyH="CENTER" justifyV="MIDDLE" hidden="false">
					<Size x="1" y="15" />
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="0" y="0" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Scripts>
			<OnClick inherit="prepend">HDH_AT_TalentCheckButton_OnClick(self)</OnClick>
		</Scripts>
	</CheckButton>

</Ui>